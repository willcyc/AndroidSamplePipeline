pipeline{
    agent {
        label 'master'
    }

    stages{
        stage('安卓程序源码同步') {
            steps {
                sh 'mkdir -p jenkins_AndroidSampleApp'
                dir("jenkins_AndroidSampleApp"){
                    git branch:'master', url:'git@github.com:willcyc/jenkins_AndroidSampleApp.git'
                }
            }
        }

        stage('安卓编译打包') {
            steps {
                sh '''
                    cd jenkins_AndroidSampleApp
                    sh gradlew clean assembleDebugs
                '''
            }
        }


        stage('安卓部署') {
            steps {
                sh '''
                    cd jenkins_AndroidSampleApp
                    apk=app/build/outputs/apk/debug/app-debug.apk
                    {
                        #try: 卸载现有的安卓app
                        /Users/willcheng/Library/Android/sdk/platform-tools/adb uninstall com.appsflyer.androidsampleapp
                    } || {
                        #catch
                        echo 'no com.appsflyer.androidsampleapp package'
                    }
                    sleep 5

                    #安装安卓app
                    /Users/willcheng/Library/Android/sdk/platform-tools/adb install $apk
                '''
            }
        }

        stage('自动测试程序源码同步') {
            steps {
                sh 'mkdir -p iAppBVT'
                dir("iAppBVT"){
                    git branch:'master', url:'git@github.com:willcyc/jenkins_iappBVT.git'
                }
            }
        }

        stage('运行自动化测试') {
            steps {
                sh '''
                
                    cd iAppBVT
                    /Users/willcheng/Downloads/apache-maven-3.6.3/bin/mvn clean install
                '''
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: 'jenkins_AndroidSampleApp/app/build/outputs/apk/debug/app-debug.apk'
        }
        always {
            emailext body: '$DEFAULT_CONTENT', recipientProviders: [[$class: 'RequesterRecipientProvider']], subject: '$DEFAULT_SUBJECT'
        }
    }
}